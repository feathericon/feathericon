  ul.shareButtons__list
    li.shareButtons__item
      //- github fork
      <a class="github-button" href="https://github.com/featherplain/feathericon/fork" data-icon="octicon-repo-forked" data-style="small" data-count-href="/featherplain/feathericon/network" data-count-api="/repos/featherplain/feathericon#forks_count" data-count-aria-label="# forks on GitHub" aria-label="Fork featherplain/feathericon on GitHub">Fork</a>
    li.shareButtons__item
      //- github star
      <a class="github-button" href="https://github.com/featherplain/feathericon" data-icon="octicon-star" data-style="small" data-count-href="/featherplain/feathericon/stargazers" data-count-api="/repos/featherplain/feathericon#stargazers_count" data-count-aria-label="# stargazers on GitHub" aria-label="Star featherplain/feathericon on GitHub">Star</a>
    li.shareButtons__item
      //- tweet button
      <a href="https://twitter.com/share" class="twitter-share-button" data-url="#{url.pages}" data-via="featherplain" data-size="small" data-hashtags="webfont,iconfont,icons,feathericon,npm">Tweet</a> <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
    li.shareButtons__item
      //- Facebook like button
      <div class="fb-like" data-href="#{url.pages}" data-layout="button_count" data-action="like" data-size="small" data-show-faces="false" data-share="true"></div>
